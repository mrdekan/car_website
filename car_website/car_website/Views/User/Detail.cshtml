        <div>
            <div id="name_container">
                <h2>@Model.SurName @Model.Name</h2>
                @if (isSelfAccount)
                {
                    <button id="change-name" onclick="editName(this)" name="@Model.Name" surname="@Model.SurName">
                        <span>
