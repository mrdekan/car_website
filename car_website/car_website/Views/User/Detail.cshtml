                                    <clipPath id="clip0_217_311">
                                        <rect width="24" height="24" fill="white" />
                                    </clipPath>
                                </defs>
                            </svg>
                        </span>
                    </button>
                }
            </div>
            <div id="phone_container">
                <h3>+@Model.PhoneNumber</h3>
                @if (isSelfAccount)
                {
                    <button id="change-phone-number" onclick="editPhone(this)" phone=@Model.PhoneNumber>
