@using car_website.ViewModels;
@model NewPasswordViewModel
@{
    ViewData["Title"] = "Зміна пароля";
    ViewBag.Index = "False";
}
<div class="login-wrapper">
    <form method="post" asp-action="NewPassword" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Password">Новий пароль</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Пароль" id="pass">
            <span asp-validation-for="Password" class="text-danger"></span>
            <div class="showpass">
                <span>Показати пароль? </span>
                <input type="checkbox" id="pass_show" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Підтвердіть пароль</label>
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Підтвердіть пароль" id="confirmpass">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            <div class="showpass">
                <span>Показати пароль? </span>
                <input type="checkbox" id="confirmpass_show" />
            </div>
        </div>
        <button type="submit" class="sell-button">Змінити</button>
    </form>
</div>
<script src="~/js/registerPage.js" asp-append-version="true"></script>