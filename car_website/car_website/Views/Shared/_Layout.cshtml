<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RoadStar</title>
    <!--<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />-->
    <link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />
    <!--<link rel="stylesheet" href="~/car_website.styles.css" asp-append-version="true" />-->
</head>
<body>
    <header>
        <div class="header_left">
            <a asp-controller="Home" asp-action="Index">RoadStar</a>
        </div>
        <div class="header_center"></div>
        <div class="header_right">
            @{
                var userId = ViewContext.HttpContext.Session.GetString("UserId");
                //var userName = ViewContext.HttpContext.Request.Cookies["UserName"];
            }

            @if (!string.IsNullOrEmpty(userId))
            {
                <a asp-controller="User" asp-action="Detail" asp-route-id=@userId class="header_right-button" id="header_right-button">Кабінет</a>
            }
            else
            {
                <a asp-controller="User" asp-action="Login" class="header_right-button" id="header_right-button">Вхід</a>
            }
        </div>
        @*
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">нічаво</a>
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">ЧАВо</a>
        <a href="#">Вхід</a>*@
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - car_website - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <!--<script src="~/lib/jquery/dist/jquery.min.js"></script>-->
    <!--<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>-->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>